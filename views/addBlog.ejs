<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blogify</title>
    <link rel="stylesheet" href="./partials/styles.css">
  </head>
  <body>
    <%- include('./partials/navbar') %>
    <form method="post" action="/user/addblog" enctype="multipart/form-data">
      <div class="form-floating">
        <div class="mb-3">
          <label for="floatingInputValue">Title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            placeholder="Title Here!"
          />
        </div>
        <div class="mb-3">
          <label for="floatingTextarea2">Decription</label>
          <textarea
            class="form-control"
            placeholder="Description Here!"
            id="body"
            name="body"
            style="height: 100px"
          ></textarea>
        </div>
        <div class="mb-3">
            <label for="coverImage" class="form-control">Cover Image</label>
            <input type="file" name="coverImage" id="coverImage" aria-describedby="coverImage" class="form-control">
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <%- include('./partials/scripts') %>
  </body>
</html>
